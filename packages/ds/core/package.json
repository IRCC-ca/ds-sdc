{
    "name": "@ircc-ca/ds-sdc-core",
    "version": "1.3.5",
    "description": "Core styles for Digital Journey Journey Labs Design System",
    "author": "IRCC-ca",
    "homepage": "https://github.com/IRCC-ca/ds-sdc#readme",
    "license": "MIT",
    "directories": {
        "lib": "lib",
        "test": "__tests__"
    },
    "main": "_index.scss",
    "files": [
        "**/*.scss",
        "**/*.md",
        "assets/**",
        "fonts/**"
    ],
    "repository": {
        "type": "git",
        "url": "git+https://github.com/IRCC-ca/ds-sdc.git"
    },
    "scripts": {
        "build": "echo \"No build required! This script exists to avoid a lerna bug\"",
        "test": "echo \"Tests not implemented\"",
        "format": "prettier \"./**/*.{ts,json,css,scss,html}\" --write",
        "format:check": "prettier \"./**/*.{ts,json,css,scss,html}\" --check",
        "lint:md": "alex **/*.md",
        "lint:style": "stylelint **/*.scss",
        "lint": "npm run lint:style"
    },
    "bugs": {
        "url": "https://github.com/IRCC-ca/ds-sdc/issues"
    },
    "publishConfig": {
        "@ircc-ca:registry": "https://registry.npmjs.com/"
    },
    "dependencies": {
        "@fontsource/inter": "^4.5.13",
        "@fontsource/lato": "^4.5.10"
    },
    "devDependencies": {
        "eslint-config-prettier": "^8.5.0",
        "prettier": "^2.6.2"
    }
}
