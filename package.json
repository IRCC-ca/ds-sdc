{
    "name": "@ircc-ca/ds-sdc",
    "version": "0.1.4",
    "private": false,
    "scripts": {
        "ng": "ng",
        "start": "ng serve",
        "start:react": "cd sample-react && npm run start",
        "build": "ng build",
        "build:packages": "lerna run build --scope=@ircc-ca/ds-sdc-core && lerna run build --scope=@ircc-ca/ds-sdc-angular",
        "lint": "ng lint && npm run lint:style",
        "format": "lerna run format",
        "web": "lerna run web",
        "lint:md": "alex --quiet sample/**/*.md && alex --quiet *.md",
        "lint:sample:style": "stylelint \"./sample/src/**/*.scss\"",
        "lint:style": "npm run lint:sample:style",
        "test": "lerna run test",
        "docs:json": "compodoc -p ./tsconfig.json -e json -d .",
        "storybook": "ng run sample:storybook",
        "storybook:build": "ng run sample:build-storybook",
        "prepare": "husky install",
        "prep": "npx lerna clean -y && npx lerna bootstrap && npm run build:packages && npx lerna link",
        "a-p": "sh shell/angular-patch-version.sh",
        "c-p": "sh shell/core-patch-version.sh",
        "a-r": "sh shell/angular-release-version.sh",
        "c-r": "sh shell/core-release-version.sh",
        "rm-pl": "sh shell/clear-package-lock.sh"
    },
    "dependencies": {
        "@angular/animations": "^14.2.8",
        "@angular/common": "^14.2.9",
        "@angular/compiler": "^14.2.9",
        "@angular/core": "^14.2.9",
        "@angular/forms": "^14.2.10",
        "@angular/platform-browser": "^14.2.10",
        "@angular/platform-browser-dynamic": "^14.2.10",
        "@angular/router": "^14.2.9",
        "@ircc-ca/ds-sdc-angular": "file:packages/ds/angular/dist",
        "@ircc-ca/ds-sdc-core": "file:packages/ds/core",
        "@ngx-translate/core": "^14.0.0",
        "@ngx-translate/http-loader": "^7.0.0",
        "rxjs": "~7.5.7",
        "tslib": "^2.3.0",
        "zone.js": "~0.11.4"
    },
    "devDependencies": {
        "@angular-builders/jest": "^14.0.2",
        "@angular-devkit/build-angular": "^14.2.9",
        "@angular-eslint/builder": "14.1.2",
        "@angular-eslint/eslint-plugin": "14.1.2",
        "@angular-eslint/eslint-plugin-template": "14.1.2",
        "@angular-eslint/schematics": "14.1.2",
        "@angular-eslint/template-parser": "14.1.2",
        "@angular/cli": "^14.2.9",
        "@angular/compiler-cli": "^14.2.9",
        "@babel/core": "^7.20.2",
        "@compodoc/compodoc": "^1.1.18",
        "@types/estree": "^1.0.0",
        "@types/jest": "^29.1.2",
        "@types/node": "^18.8.3",
        "@types/react-dom": "^18.0.5",
        "@typescript-eslint/eslint-plugin": "5.42.1",
        "@typescript-eslint/parser": "5.42.1",
        "alex": "^11.0.0",
        "babel-loader": "^9.1.0",
        "eslint": "^8.24.0",
        "eslint-plugin-storybook": "^0.6.4",
        "husky": "^8.0.1",
        "jest": "^28.0.0",
        "jest-preset-angular": "^12.2.2",
        "lerna": "^6.0.3",
        "ng-packagr": "^14.2.1",
        "prettier": "^2.7.1",
        "stylelint": "^14.13.0",
        "stylelint-config-prettier": "^9.0.3",
        "stylelint-config-recommended-scss": "^7.0.0",
        "stylelint-config-standard": "^28.0.0",
        "stylelint-scss": "^4.3.0",
        "ts-jest": "^28.0.8",
        "typescript": "~4.8.4"
    }
}
