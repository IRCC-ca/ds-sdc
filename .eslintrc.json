{
    "root": true,
    "parser": "@typescript-eslint/parser",
    "extends": [
      "prettier"
    ],
    "ignorePatterns": [
      "projects/**/*"
    ],
    "rules": {
      "no-console": "error"
    },
    "overrides": [
      {
        "files": [
          "*.ts",
          "*.tsx"
        ],
        "parserOptions": {
          "project": [
            "tsconfig.json"
          ],
          "createDefaultProgram": true
        },
        "extends": [
          "plugin:@angular-eslint/recommended",
          "plugin:@angular-eslint/template/process-inline-templates",
          "plugin:@typescript-eslint/recommended",
          "prettier"
        ],
        "rules": {
          "@angular-eslint/directive-selector": [
            "error",
            {
              "type": "attribute",
              "prefix": ["jds", "app"],
              "style": "camelCase"
            }
          ],
          "@angular-eslint/component-selector": [
            "error",
            {
              "type": "element",
              "prefix": ["jds", "app"],
              "style": "kebab-case"
            }
          ],
          "no-console": "error"
        }
      },
      {
        "files": [
          "*.html"
        ],
        "extends": [
          "plugin:@angular-eslint/template/recommended",
          "prettier"
        ],
        "rules": {
          "no-console": "error"
        }
      }
    ]
  }